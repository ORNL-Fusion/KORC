										! specified in "filename".
	magnetic_field_filename = "/home/l8c/Documents/KORC/KORC-FO/inputFiles/ITER_3D.h5"
	pic_algorithm = 1 ! 1 = Leapfrog, 2 = RK4, 3 = some other
/

&plasma_species
	runaway = .FALSE., .TRUE. !
	Ro = 6.6, 6.6 !
	Zo = 0.0, 0.0 !
	r = 0.5, 0.5 !
	Eo = 30.0E6, 30.0E6 ! Initial energy in eV
	etao = 1.0, 1.0 ! Initial pitch angle
	ppp = 2, 2 ! Number of particles per process (mpi)
